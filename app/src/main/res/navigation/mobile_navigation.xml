<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home_menu">

    <fragment
        android:id="@+id/navigation_home_menu"
        android:name="com.group35.nutripath.homemenu.fragment.HomeMenuFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home_menu">
    </fragment>



    <fragment
        android:id="@+id/navigation_home"
        android:name="com.group35.nutripath.ui.home.HomeFragment"
        android:label="Chart"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.group35.nutripath.ui.dashboard.DashboardFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_dashboard" />

    <fragment
        android:id="@+id/navigation_map"
        android:name="com.group35.nutripath.TrackingFragment"
        android:label="@string/title_map"
        tools:layout="@layout/fragment_search">
        <!-- Add action to CalendarFragment -->
        <action
            android:id="@+id/action_tracking_to_calendar"
            app:destination="@id/navigation_calendar" />
    </fragment>

    <fragment
        android:id="@+id/navigation_calendar"
        android:name="com.group35.nutripath.CalendarFragment"
        android:label="Calendar"
        tools:layout="@layout/fragment_calendar" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.group35.nutripath.ui.notifications.NotificationsFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_notifications" />

    <fragment
        android:id="@+id/navigation_settings"
        android:name="com.group35.nutripath.ui.settings.SettingsFragment"
        android:label="@string/title_settings"
        tools:layout="@layout/fragment_settings">
        <action
            android:id="@+id/settings_to_profile"
            app:destination="@id/navigation_profile" />
    </fragment>

    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.group35.nutripath.ui.settings.ProfileFragment"
        android:label="Profile"
        tools:layout="@layout/fragment_profile"/>

    <fragment
        android:id="@+id/navigation_meal_menu"
        android:name="com.group35.nutripath.api.themealdb.MealFragment"
        android:label="Meal List"
        tools:layout="@layout/fragment_recipe_menu">
        <action
            android:id="@+id/action_navigation_meal_menu_to_navigation_meal_detail_fragment"
            app:destination="@id/navigation_meal_detail_fragment" />
    </fragment>

    <fragment
        android:id="@+id/navigation_meal_detail_fragment"
        android:name="com.group35.nutripath.api.themealdb.MealDetailFragment"
        android:label="Meal Details"
        tools:layout="@layout/fragment_meal_details">
        <argument
            android:name="meal"
            app:argType="com.group35.nutripath.api.themealdb.Meal" />
    </fragment>
</navigation>