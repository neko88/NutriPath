<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/meal_navigation"
    app:startDestination="@id/navigation_meal_menu">

    <fragment
        android:id="@+id/navigation_meal_menu"
        android:name="com.group35.nutripath.api.themealdb.MealFragment"
        android:label="Meal List"
        tools:layout="@layout/fragment_recipe_menu">
        <action
            android:id="@+id/action_navigation_meal_menu_to_navigation_meal_detail_fragment"
            app:destination="@id/navigation_meal_detail_fragment" />
    </fragment>

    <fragment
        android:id="@+id/navigation_meal_detail_fragment"
        android:name="com.group35.nutripath.api.themealdb.MealDetailFragment"
        android:label="Meal Details"
        tools:layout="@layout/fragment_meal_details">
        <argument
            android:name="meal"
            app:argType="com.group35.nutripath.api.themealdb.Meal" />
    </fragment>

</navigation>
