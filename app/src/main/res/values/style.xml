<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextBoxStyle">
        <item name="android:background">@drawable/round_titles</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:gravity">left</item>
        <item name="android:textColor">#2b2b2b</item>
        <item name="android:textSize">15dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="CircleImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10%</item>
    </style>
    <style name="MealListTextStyle">
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif-smallcaps</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">15dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:layout_gravity">left</item>
    </style>

    <style name="MealIngredientTinyImage">
        <item name="android:layout_width">35dp</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="background">@drawable/circle_background_image</item>
    </style>

    <style name="noErrorMessage">
        <item name="android:textSize">0sp</item>
    </style>

</resources>